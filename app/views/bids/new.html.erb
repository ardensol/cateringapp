<div class="container-fluid">
	<h1>New Bid</h1>

	<%= form_for [@quote, @bid] do |f| %>
		<div class="field">
		    <%= f.label "Subject" %><br>
		    <%= f.text_field :name %>
 		 </div>
 		 <div class="field">
		    <%= f.label :amount %><br>
		    <%= f.text_field :amount %>
 		 </div>
 		 <div class="field">
		    <%= f.label :description %><br>
		    <%= f.text_field :description %>
 		 </div>
	<%= f.submit %>
	<% end %>
</div>

